<%- layout('layouts/main') %>
    <link rel="stylesheet" href="/assets/css/home_layout.css">
    <div class="home-layout-container">
        <p class="facturation-title">Sistema de facturacion</p>
        
        <!-- Nueva barra de progreso navegable -->
        <nav class="progress-nav">
            <div class="progress-steps">
                <a href="/facturation/products" class="progress-step <%= internalPage === 'products' ? 'active' : '' %>">
                    <div class="step-number">1</div>
                    <div class="step-label">Productos</div>
                </a>
                
                <div class="progress-connector"></div>
                
                <a href="/facturation/clients" class="progress-step <%= internalPage === 'clients' ? 'active' : '' %>">
                    <div class="step-number">2</div>
                    <div class="step-label">Clientes</div>
                </a>

                <div class="progress-connector"></div>

                <a href="/facturation/pay" class="progress-step <%= internalPage === 'pay' ? 'active' : '' %>">
                    <div class="step-number">3</div>
                    <div class="step-label">Pago</div>
                </a>
            </div>
        </nav>

        <%- body %>
    </div>