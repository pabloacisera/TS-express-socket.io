<%- layout('layouts/home_layout') %>
    <link rel="stylesheet" href="/assets/css/product_template.css">

    <%- include('partials/productsModal', { dataJson: products }) %>
    <%- include('partials/acceptModal') %>

    <div class="product-container">
        <section class="search-product">
                <input type="text" id="searchTerm" name="searchTerm" placeholder="buscar por codigo, nombre o marca">
        </section>

        <section class="table-products">
            <table class="table-template">
                <thead class="table-head">
                    <th>codigo</th>
                    <th>nombre</th>
                    <th>cantidad</th>
                    <th>subtotal</th>
                    <th>acciones</th>
                </thead>
                <tbody class="table-body">

                </tbody>
            </table>
            
            <!-- SecciÃ³n mejorada del total y botones -->
            <div class="table-footer">
                <div class="total-section">
                    <span class="total-label">Total:</span>
                    <span class="total-amount">$0</span>
                </div>
                <div class="button-section">
                    <button type="button" class="btn btn-continue">Continuar</button>
                    <button type="button" class="btn btn-budget">Presupuestar</button>
                    <button type="button" class="btn btn-clear">Limpiar</button>
                </div>
            </div>
        </section>
    </div>

    <script type="module" src="/assets/js/products.js"></script>